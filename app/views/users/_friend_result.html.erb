<div class="results-block">
  <%= render 'layouts/messages', class: "error-block" %>
</div>

<% if @friends %>
    <div class="card card-header results-block">
      <table class="col-md-12">
        <tbody>
          <% @friends.each do |friend| %>  
            <tr>
              <td class="card-text"> <strong> Name: </strong> <em class="font"><%= friend.full_name %> </em></td> 
              <td class="card-text"> <strong> Email: </strong> <em class="font"><%= friend.email %> </em></td> 
              <td class="card-text"> <strong> Actions: </strong> 
                <%= link_to "View Profile", '#', class: "btn btn-sm btn-info" %>
                <% if current_user.not_friends_with?(friend.id) %> 
                  <%= link_to 'Follow friend?', '#', class: "btn btn-sm btn-info", method: :post %>
                <% else %>
                  <span class="badge badge-secondar">
                    You are friends
                  </span>
                <% end %>
              </td>
            </tr>   
          <% end %> 
        </tbody>
      </table>
    </div>
  
<% end %> 
