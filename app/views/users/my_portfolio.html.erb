<h1>My Portfolio</h1>

<div class='search-area'>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-mine" do %>
          <%= fa_icon 'search 2x', class: "btn-mine" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 

<% if @stock %>
  <div class="card text-white bg-mine mb-3" style="max-width: 16rem;">
    <div class="card-body">  
      <p> <strong> Symbol: </strong> <em class="font"><%= @stock.ticker %> </em></p> 
        
      <p> <strong> Name: </strong> <em class="font"><%= @stock.name %> </em></p> 
        
      <p> <strong> Price: </strong> <em class="font"><%= @stock.last_price %> </em></p> 
        
    </div>
  </div>
<% end %> 
