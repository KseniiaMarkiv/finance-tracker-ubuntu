<div class="results-block">
  <%= render 'layouts/messages', class: "error-block" %>
</div>

<% if @stock %>
<%#  <div class="card text-white bg-mine mb-3" style="max-width: 16rem;"> %>
    <div class="card text-white bg-mine mb-3" style="max-width: 16rem;">  
      <p> <strong> Symbol: </strong> <em class="font"><%= @stock.ticker %> </em></p> 
      <p> <strong> Name: </strong> <em class="font"><%= @stock.name %> </em></p> 
      <p> <strong> Price: </strong> <em class="font"><%= @stock.last_price %> </em></p> 
      <% if current_user.can_track_stock?(@stock.ticker) %>
        <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker),
                                    class: "btn btn-info", method: :post %>        
      <% else %>
        <span class="badge badge-secondary">
          You are already tracking
          <% if !current_user.under_stock_limit? %>
            10 stocks
          <% end %>
          <% if current_user.stock_already_tracked?(@stock.ticker) %>
            this stock
          <% end %>
        </span>
      <% end %>
    </div>
<%#  </div> %>
<% end %> 




